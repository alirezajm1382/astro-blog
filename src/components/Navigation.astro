---
//Components
import { Button } from "./ui/button";

//Variables
const { pathname } = Astro.url;
---

<header>
  <nav class="p-4 backdrop-blur-lg rounded-md">
    <div class="flex flex-row justify-between items-center">
      <a class="text-xl text-teal-700 font-semibold">Astro</a>
      <div class="flex flex-row gap-4">
        <a href="/"
          ><Button variant={pathname === "/" ? "secondary" : "ghost"}
            >Home</Button
          ></a
        >
        <a href="/blog"
          ><Button variant={pathname === "/blog" ? "secondary" : "ghost"}
            >Blog</Button
          ></a
        >
        <a href="/about"
          ><Button variant={pathname === "/about" ? "secondary" : "ghost"}
            >About</Button
          ></a
        >
        <Button className="duration-150 hover:bg-teal-700">Log In</Button>
      </div>
    </div>
  </nav>
</header>
